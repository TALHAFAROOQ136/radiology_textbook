{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"],
      "@backend/*": ["./backend/src/*"],
      "@frontend/*": ["./frontend/src/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "frontend/**/*",
    "backend/**/*",
    "types/**/*",
    ".specify/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".docusaurus"
  ]
}